# CEO Karma AI - Environment Variables Example
# Copy this file to .env and fill in your actual values

# OpenAI API credentials
# Required for the LLM powering CEO Karma AI
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Set a specific organization ID if you have multiple organizations
# OPENAI_ORGANIZATION_ID=your_organization_id

# Optional: Model configuration
# Default model is gpt-4o but you can change it here
# MODEL_NAME=gpt-4o
# TEMPERATURE=0.7
# MAX_TOKENS=4000

# Optional: Anthropic API credentials (if you want to add Claude models)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Application configuration
# LOG_LEVEL=INFO
# DEBUG=False

# Optional: Database configuration for storing analysis history
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ceokarma
# DB_USER=postgres
# DB_PASSWORD=your_database_password

# Optional: Web API configuration (if implementing an API service)
# API_HOST=0.0.0.0
# API_PORT=8000
# API_WORKERS=1
# ENABLE_CORS=True
